<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guilherme.stockcontrol.stockcontrol.BuysController">
    <center>
        <VBox fx:id="vBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>
                <HBox spacing="15.0" HBox.hgrow="ALWAYS">
                    <children>
                        <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: #f5f5f5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #808080;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="%total.expense" textFill="GREY" />
                                <Label fx:id="totalExpenseLabel" text="R$0">
                                    <font>
                                        <Font size="25.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: #f5f5f5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #808080;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="%month.expense" textFill="GREY" />
                                <Label fx:id="monthExpenseLabel" text="R$0">
                                    <font>
                                        <Font size="25.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: #f5f5f5; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #808080;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="%year.expense" textFill="GREY" />
                                <Label fx:id="yearExpenseLabel" text="R$0">
                                    <font>
                                        <Font size="25.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label text="%buys.header.label">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <DatePicker fx:id="fromDatePicker" editable="false" maxWidth="1.7976931348623157E308" promptText="%start.date" HBox.hgrow="ALWAYS" />
                        <DatePicker fx:id="toDatePicker" editable="false" maxWidth="1.7976931348623157E308" promptText="%end.date" HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="productsComboBox" maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="buyDateColumn" prefWidth="75.0" style="-fx-alignment: BASELINE_CENTER;" text="Dia da Compra" />
                        <TableColumn fx:id="productNameColumn" prefWidth="75.0" style="-fx-alignment: BASELINE_CENTER;" text="Nome do Produto" />
                        <TableColumn fx:id="buyQuantityColumn" prefWidth="75.0" style="-fx-alignment: BASELINE_CENTER;" text="Quantidade Comprada" />
                        <TableColumn fx:id="priceUnitColumn" prefWidth="75.0" style="-fx-alignment: BASELINE_CENTER;" text="Preço por Unidade" />
                        <TableColumn fx:id="buyPriceColumn" prefWidth="75.0" style="-fx-alignment: BASELINE_CENTER;" text="Preço da Compra" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" minHeight="-Infinity" prefWidth="200.0">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button alignment="CENTER" graphicTextGap="8.0" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onEditBuyClicked" prefHeight="29.0" prefWidth="90.0" style="-fx-background-color: #0073e6; -fx-border-color: transparent;" text="%button.edit.item" textFill="WHITE">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assets/icons/pen-to-square-solid.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="8.0" />
                            </HBox.margin>
                        </Button>
                        <Button alignment="CENTER" graphicTextGap="8.0" mnemonicParsing="false" onAction="#onDeleteBuyButtonClicked" prefHeight="29.0" prefWidth="90.0" style="-fx-background-color: #e40001; -fx-border-color: transparent;" text="%button.delete.item" textFill="WHITE">
                            <graphic>
                                <ImageView fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@assets/icons/trash-can-solid.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>

            </children>
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
